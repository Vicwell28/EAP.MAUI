<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EAP.MAUI.Views.MovieView.MovieView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MovieView">
    <ScrollView>
        <VerticalStackLayout Padding="10" Margin="10" Spacing="10">
            <Label Text="{Binding SelectedItem.Title}" />
            <Image Source="{Binding SelectedItem.Imagen}" />
            <Label Text="{Binding SelectedItem.Sinopsis}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>